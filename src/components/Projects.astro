---
import SectionTitle from "./SectionTitle.astro";
import ProjectCard from "./ProjectCard.astro";

const myProjects = [
  {
    name: "Egx Ingeniería",
    description:
      "Página web de contacto para la empresa EGX Ingeniería. Exploré el framework Astro y descubrí su potencial para el desarrollo de sitios estáticos.",
    src: "/img/egx-ingenieria.jpg",
    href: "https://www.egxingenieria.cl/",
    technologies: ["Astro", "Tailwind"],
    githubUrl: "https://github.com/jorge-castilla/egx-engineer",
    isPersonal: false,
  },
  {
    name: "Ecomac Ltda.",
    description:
      "Sitio web oficial de Inmobiliaria Ecomac en el cual se exponen proyectos inmobiliarios y se gestionan intenciones de compra.",
    src: "/img/ecomac.jpg",
    href: "https://www.ecomac.cl/",
    technologies: ["Laravel", "Vue", "Bootstrap"],
    githubUrl: null,
    isPersonal: false,
  },
  {
    name: "Quizzy",
    description:
      "Aplicación web de trivia con preguntas sobre diversas categorías. Desarrollada utilizando React y la API de OpenTriviaDB.",
    src: "/img/quizzy.jpg",
    href: "https://quizzy-quiggle.vercel.app/",
    technologies: ["React", "Redux", "Tailwind"],
    githubUrl: "https://github.com/jorge-castilla/quiz-react",
    isPersonal: true,
  },
  // {
  //   name: "Hero Mixer",
  //   description:
  //     "Aplicación web desarrollada con la API de ChatGPT y Dall-e para crear nuevos heroes de Dota 2 fusionando heroes actuales.",
  //   src: "/img/hero-mixer.jpg",
  //   href: "https://hero-mixer.vercel.app/",
  //   technologies: ["Vue", "ChatGPT", "Dall-e", "Tailwind"],
  //   githubUrl: "https://github.com/jorge-castilla/hero-mixer",
  //   isPersonal: true,
  // },
];
---

<section
  id="Proyectos"
  class="min-h-[100vh] px-8 py-24 max-w-5xl xl:ml-24 w-full"
>
  <SectionTitle title="Proyectos" number="02" />
  <div class="flex flex-col gap-24 lg:gap-40 mt-16 lg:items-start items-center">
    {
      myProjects.map((project, index) => (
        <ProjectCard
          name={project.name}
          description={project.description}
          src={project.src}
          href={project.href}
          reverse={index % 2 === 0}
          technologies={project.technologies}
          githubUrl={project.githubUrl}
          isPersonal={project.isPersonal}
        />
      ))
    }
  </div>
</section>
